<% content_for :component_title, "All post" %>
<table id="datatable" class="table table-striped table-bordered">
  <thead>
      <tr>
          <th>ID</th>
          <th>Content</th>
          <th>Author</th>
          <th>Reports</th>
          <th>Action</th>
      </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr class="admin-user">
        <td><%= link_to post.id, post %></td>
        <td><%= truncate(post.content, length: 20) %></td>
        <td><%= post.user.name %></td>
        <td><%= post.reports.count %></td>
        <td>
          <button value="<%= post.id %>" class="btn btn-sm btn-warning block-post">
            <%= post.non_block? ? "Block" : "UnBlock" %>
          </button>
          <button value="<%= post.id %>" class="btn btn-sm btn-danger delete-post">
            Delete
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
