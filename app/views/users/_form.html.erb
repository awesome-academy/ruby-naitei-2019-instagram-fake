<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field input-group mb-3 justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
        </div>
    <%= text_field_tag :name, nil, placeholder:"Name" %>
  </div>

  <div class="field input-group mb-3 justify-content-center">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-envelope"></i></span>
    </div>
    <%= text_field_tag :email, nil, placeholder:"Email" %>
  </div>

  <div class="field input-group mb-3 justify-content-center">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa fa-lock"></i></span>
      </div>
    <%= password_field_tag :password, nil, placeholder:"Password" %>
  </div>

  <div class="field input-group mb-3 justify-content-center">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa fa-lock"></i></span>
      </div>
    <%= password_field_tag :password_confirmation, nil, placeholder:"Retype Password" %>
  </div>

  <div class="d-flex actions justify-content-center">
    <%= submit_tag nil, class: "btn btn-secondary rounded-lg" %>
  </div>
<% end %>
