<%= form_with(model: user, local: true, html: { :multipart => true }) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field input-group mb-3 justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
        </div>
    <%= form.text_field :name, placeholder: t("name")%>
  </div>

  <div class="field input-group mb-3 justify-content-center">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-envelope"></i></span>
    </div>
    <%= form.text_field :email, placeholder: t("email")%>
  </div>

  <div class="field input-group mb-3 justify-content-center">
    <%= file_field_tag :avatar %>
  </div>

  <div class="field input-group mb-3 justify-content-center">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa fa-lock"></i></span>
      </div>
    <%= form.password_field :password, placeholder: t("password")%>
  </div>

  <div class="field input-group mb-3 justify-content-center">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa fa-lock"></i></span>
      </div>
    <%= form.password_field :password_confirmation, placeholder: t("re_password")%>
  </div>

  <div class="d-flex actions justify-content-center">
    <%= form.submit class: "btn btn-secondary rounded-lg" %>
  </div>
<% end %>
